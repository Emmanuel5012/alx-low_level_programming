#include <stdio.h>
#include "main.h"

/**
 * print_array - prints elements of an array integer.
 * @a: input array
 * @n: number of integers
 * Return: no return
 */
void print_array(int *a, int n)
{
  int i = 0;

  for (; i < n; i++)
    {
      printf("%d", *(a + i));
      if (i != (n - 1))
	printf(", ");
    }
  printf("\n");
}

#endif
